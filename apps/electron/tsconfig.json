{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "baseUrl": ".",
    "outDir": "dist",
    "jsx": "react-jsx",
    "composite": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["./src/*"],
      "@mcp_router/shared": ["../../packages/shared/src"],
      "@mcp_router/ui": ["../../packages/ui/src"],
      "@mcp_router/ui/*": ["../../packages/ui/src/*"]
    }
  },
  "include": ["src/**/*"],
  "references": [
    { "path": "../../packages/shared" },
    { "path": "../../packages/ui" }
  ]
}
